@model IEnumerable<Seminar_algebra.Models.Zaposlenik>

@{
    ViewBag.Title = "Zaposlenici";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Novi zaposlenik", "Register","Home", null, new {@class = "nav-link text-center" } )
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Ime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prezime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.KorisnickoIme)
        </th>
        @if (User.Identity.Name == "Admin")
        { <th>
            @Html.DisplayNameFor(model => model.Lozinka)
        </th>}
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Ime)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Prezime)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.KorisnickoIme)
    </td>
    @if (User.Identity.Name == "Admin")
    {<td>
            @Html.DisplayFor(modelItem => item.Lozinka)
        </td>}
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.IdZaposlenik }) |
        @Html.ActionLink("Details", "Details", new { id = item.IdZaposlenik }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.IdZaposlenik })
    </td>
</tr>
}

</table>
